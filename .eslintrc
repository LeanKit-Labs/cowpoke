{
    "extends": ["leankit", "leankit/es6"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-expressions": 2,
		"prefer-arrow-callback": 0,
		"init-declarations": 0,
        "no-magic-numbers": 0,
        "max-statements": 0,
        "no-console": 0,
        "global-require": 0,
        "no-process-exit": 0
    }
}
